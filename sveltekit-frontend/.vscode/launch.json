{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch SvelteKit",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@sveltejs/kit/src/exports/vite/dev/index.js",
      "args": ["--config", "vite.config.ts"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "vite:*,kit:*"
      },
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Launch SvelteKit (GPU)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@sveltejs/kit/src/exports/vite/dev/index.js",
      "args": ["--config", "vite.config.ts"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development",
        "NODE_OPTIONS": "--max-old-space-size=3072",
        "ENABLE_GPU": "true",
        "RTX_3060_OPTIMIZATION": "true",
        "CONTEXT7_MULTICORE": "true",
        "OLLAMA_GPU_LAYERS": "30",
        "DEBUG": "vite:*,kit:*"
      },
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Debug Authentication",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@sveltejs/kit/src/exports/vite/dev/index.js",
      "args": ["--config", "vite.config.ts"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "lucia:*,auth:*,db:*",
        "DATABASE_URL": "postgresql://legal_admin:123456@localhost:5432/legal_ai_db"
      },
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}