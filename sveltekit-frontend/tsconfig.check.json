{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Relax strict flags for a fast, non-invasive check pass.
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": [
    "ambient.d.ts",
    // Focus checks on newly added or recently edited core service files
    "src/routes/api/chat/+server.ts",
    "src/routes/api/chat/history/+server.ts",
    "src/routes/api/user/me/+server.ts",
    "src/lib/server/chat/history-service.ts",
    "src/lib/server/prompt/contextual-engine.ts",
    "src/lib/stores/chat-history.ts",
    "src/lib/stores/current-user.ts",
    // Allow Svelte types but avoid compiling entire app
    "src/**/*.d.ts"
  ],
  "exclude": [
    "tests/**",
    "src/lib/tests/**",
    "src/routes/**",
    "src/wasm/**",
    "src/lib/wasm/**",
    "src/lib/webasm/**",
    "src/lib/webgpu/**",
    "src/lib/gpu/**",
    "src/lib/workers/**",
    "src/lib/utils/observability-*.ts",
    "src/**/__tests__/**",
    "src/**/__mocks__/**",
    "node_modules/**",
    ".svelte-kit/**",
    "dist/**",
    "build/**"
  ]
}
