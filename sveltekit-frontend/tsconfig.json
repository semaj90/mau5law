{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["svelte", "vite/client", "vitest/globals", "@sveltejs/kit", "@webgpu/types", "node"],
    "strict": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": false,
    "noEmit": true,
    "isolatedModules": false,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "downlevelIteration": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noImplicitReturns": false,
    "noImplicitOverride": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "lib": ["ES2022", "DOM", "DOM.Iterable"]
  },
  "include": [
    "ambient.d.ts",
    "src/app.d.ts",
    "src/global.d.ts",
    "src/**/*.ts",
    "src/**/*.svelte",
    "src/types/**/*.d.ts",
    "src/lib/types/**/*.d.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules/**",
    "build/**",
    "dist/**",
    ".svelte-kit/**",
    "logs/**",
    "tmp/**",
    "*.log",
    "coverage/**",
    ".vscode/**",
    "storybook-static/**",
    "node_modules/drizzle-orm/gel-core/**",
    "node_modules/@types/mdx/**",
    "src/wasm/**/*.ts",
    "src/**/wasm/**/*.ts",
    "src/**/*-wasm.ts",
    "src/**/*.wasm.ts",
    "src/lib/gpu/GpuVectorProcessor.ts",
    "src/lib/gpu/GpuVectorProcessor.ts.disabled",
    "src/lib/gpu/hybrid-gpu-context.ts",
    "src/lib/gpu/physics-aware-legal-gpu-orchestrator.ts",
    "src/lib/evidence/simd-gpu-tiling-engine.ts",
    "src/lib/evidence/detective-analysis-engine.ts",
    "src/lib/examples/webgpu-buffer-usage-examples.ts",
    "src/lib/components/three/yorha-ui/NESYoRHaHybrid3D.ts",
    "src/lib/components/three/yorha-ui/webgpu/**/*.ts",
    "src/lib/client/ocr-tensor-processor.ts",
    "src/lib/cache/**/*.ts",
    "src/lib/caching/**/*.ts",
    "src/lib/integrations/enhanced-rabbitmq-cuda-bridge.ts",
    "src/lib/db/schema/rag-integration.ts"
  ]
}